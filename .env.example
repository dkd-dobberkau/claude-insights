# Claude Insights Configuration
# Copy to .env and adjust values

# ============================================
# SERVER/ELESTIO DEPLOYMENT (docker-compose.yml)
# ============================================

# Database password (required)
DB_PASSWORD=change_me_in_production

# API secret for JWT tokens (required, use: openssl rand -hex 32)
API_SECRET_KEY=change_me_random_string

# Flask session secret (required, use: openssl rand -hex 32)
FLASK_SECRET_KEY=change_me_another_random_string

# Optional: Custom ports for local server deployment
# Elestio ignores these and uses elestio.yml routing
# API_PORT=8083
# DASHBOARD_PORT=8081

# ============================================
# LOCAL DEVELOPMENT (docker-compose.local.yml)
# ============================================

# Path to Claude Code logs directory
# On macOS/Linux: ~/.claude
CLAUDE_LOGS_PATH=~/.claude

# How often to check for new logs (in seconds)
WATCH_INTERVAL=30

# Datasette port (for data exploration)
DATASETTE_PORT=8001

# Replay UI port
UI_PORT=8002
